generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Portfolio {
  id        Int       @id @default(autoincrement())
  name      String
  category  String    @default("GLOBAL")
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  assets    Asset[]
}

model Asset {
  id         Int        @id @default(autoincrement())
  portfolio  Portfolio  @relation(fields: [portfolioId], references: [id])
  portfolioId Int
  symbol     String
  name       String
  assetType  String
  lastPriceUpdateAt DateTime?
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  transactions Transaction[]
  pricePoints  PricePoint[]
}

model Transaction {
  id        Int              @id @default(autoincrement())
  asset     Asset            @relation(fields: [assetId], references: [id])
  assetId   Int
  type      String
  quantity  Decimal
  price     Decimal
  fee       Decimal?
  date      DateTime
  source    String?
  note      String?
  createdAt DateTime         @default(now())
}

model PricePoint {
  id        Int       @id @default(autoincrement())
  asset     Asset     @relation(fields: [assetId], references: [id])
  assetId   Int
  price     Decimal
  date      DateTime
  source    String?
  createdAt DateTime  @default(now())

  @@unique([assetId, date])
}
